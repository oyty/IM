<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="Theme" >
        <!-- API 14 theme customizations can go here. -->
    </style>
    
    <style name="Theme.Light" parent="Theme">
		<item name="SkinBackground">@style/skinLightStyle</item>        
    </style>
    
    <style name="Theme.Dark" parent="Theme">
		<item name="SkinBackground">@style/skinDarkStyle</item>        
    </style>
    
    
    <style name="skinLightStyle">
        <item name="android:background">#0000ff</item>
    </style>
    
    <style name="skinDarkStyle">
        <item name="android:background">#00ff00</item>
    </style>
    
    <style name="actionbarStyle" >
    </style>
    
    <style name="actionbarTextStyle" >
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="RowLabelStyle" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="RowDetailLabelStyle" >
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    

</resources>
